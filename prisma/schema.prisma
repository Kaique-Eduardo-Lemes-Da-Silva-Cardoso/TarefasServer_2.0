generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Info {
  id         String   @id @default(uuid())
  text       String
  task_id    String
  task_fk    Task     @relation(fields: [task_id], references: [id], onDelete: Cascade)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt


  @@map("info")
}

model Task {
  id         String   @id @default(uuid())
  title      String
  check      Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("task")
  Info Info[]
}
