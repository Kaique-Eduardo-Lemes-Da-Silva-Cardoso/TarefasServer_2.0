generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Info {
  id         String   @id @default(uuid())
  text       String
  task_id    String
  task_fk    Task     @relation(fields: [task_id], references: [id], onDelete: Cascade)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt


  @@map("info")
}

model Task {
  id         String   @id @default(uuid())
  title      String
  check      Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Info    Info[]
  User    User?   @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user_id String?
  @@map("task")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String
  password   String
  admin      Boolean
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Task       Task[]

  @@map("user")
}
